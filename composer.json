{
    "name": "yourname/laravel-price-formatter",
    "description": "A Laravel package for formatting prices based on country code and language",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^6.0|^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "YourName\\PriceFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourName\\PriceFormatter\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourName\\PriceFormatter\\PriceFormatterServiceProvider"
            ],
            "aliases": {
                "PriceFormatter": "YourName\\PriceFormatter\\Facades\\PriceFormatter"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
